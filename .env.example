# 🔐 Serendipity AI — Environment Example

# 🧠 Core App Settings
APP_NAME=SerendipityAI
APP_ENV=development         # Options: development, production
APP_PORT=8000

# 🏃 FastAPI Server
HOST=127.0.0.1
RELOAD=True                 # Enable auto-reload in development

# 🤖 AI & API Keys (replace with your actual keys)
OPENAI_API_KEY=your-openai-key-here
VOICE_API_KEY=your-voice-api-key-here
IMAGE_API_KEY=your-image-api-key-here

# 🎙️ Voice & Audio Features
ENABLE_VOICE=true
FFMPEG_PATH=/usr/bin/ffmpeg # Path to ffmpeg binary

# 🖼️ Image & Video Features
ENABLE_IMAGE=true
ENABLE_VIDEO=true

# 🔒 Security & Contact
SECURITY_CONTACT=estito.security@protonmail.com
